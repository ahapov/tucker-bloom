{% liquid
  assign section_heading = section.settings.section_heading
  assign blocks_count = section.blocks.size
%}

<section class="features-grid" data-section-id="{{ section.id }}">
  {% if section_heading != blank %}
    <h2 class="features-grid__heading">{{ section_heading }}</h2>
  {% endif %}

  <div class="features-grid__wrapper">
    {%- for block in section.blocks -%}
      <div class="features-grid__item" {{ block.shopify_attributes }}>
        {% if block.settings.image != blank %}
          <div class="features-grid__image">
            <img
              src="{{ block.settings.image | image_url: width: 800 }}"
              alt="{{ block.settings.image.alt | default: block.settings.heading | escape }}"
              loading="lazy"
              width="{{ block.settings.image.width }}"
              height="{{ block.settings.image.height }}"
            >
          </div>
        {% endif %}
        
        {% if block.settings.heading != blank %}
          <h3 class="features-grid__item-heading">{{ block.settings.heading }}</h3>
        {% endif %}
        
        {% if block.settings.text != blank %}
          <div class="features-grid__item-text">
            {{ block.settings.text }}
          </div>
        {% endif %}
      </div>
    {%- endfor -%}
  </div>
</section>

<style>
  .features-grid {
    width: 100%;
    max-width: 1400px;
    margin: 0 auto;
  }

  .features-grid__heading {
    font-size: 2rem;
    font-weight: 700;
    text-align: left;
    margin: 0 0 1rem 0;
    padding: 0;
  }

  .features-grid__wrapper {
    position: relative;
    overflow: hidden;
  }

  /* Mobile: Single column, will be converted to swiper */
  .features-grid__item {
    background: #fff;
    padding: 0;
    margin-bottom: 1.5rem;
  }

  .features-grid__image {
    width: 100%;
    height: 300px;
    overflow: hidden;
    margin-bottom: 1rem;
  }

  .features-grid__image img {
    width: 100%;
    height: 100%;
    display: block;
    object-fit: cover;
  }

  .features-grid__item-heading {
    font-size: 1.5rem;
    font-weight: 700;
    margin: 0 0 0.75rem 0;
    line-height: 1.3;
  }

  .features-grid__item-text {
    font-size: 1rem;
    line-height: 1.6;
    color: #666;
    margin: 0;
  }

  .features-grid__item-text p {
    margin: 0 0 1rem 0;
  }

  .features-grid__item-text p:last-child {
    margin-bottom: 0;
  }

  /* Desktop: 3 columns */
  @media screen and (min-width: 768px) {
    .features-grid {
      padding: 0;
    }

    .features-grid__heading {
      font-size: 2.5rem;
      margin-bottom: 2rem;
      padding: 0;
    }

    .features-grid__wrapper {
      display: grid;
      grid-template-columns: repeat(3, 1fr);
      gap: 1rem;
      overflow: visible;
    }

    .features-grid__item {
      margin-bottom: 0;
    }

    .features-grid__image {
      height: 350px;
      margin-bottom: 1.5rem;
    }

    .features-grid__item-heading {
      font-size: 1.75rem;
      margin-bottom: 1rem;
    }

    .features-grid__item-text {
      font-size: 1.0625rem;
    }
  }

  @media screen and (min-width: 1200px) {
    .features-grid__heading {
      font-size: 3rem;
    }

    .features-grid__image {
      height: 400px;
    }
  }

  /* Swiper styles for mobile */
  @media screen and (max-width: 767px) {
    .features-grid {
      padding-left: 0;
      padding-right: 0;
    }

    .features-grid__wrapper.swiper {
      overflow: hidden;
      padding-bottom: 1rem;
      width: 100%;
    }

    .features-grid__wrapper .swiper-wrapper {
      display: flex;
    }

    .features-grid__wrapper .swiper-slide {
      width: 85%;
      box-sizing: border-box;
    }

    .features-grid__wrapper .swiper-pagination {
      bottom: 0;
    }

    .features-grid__wrapper .swiper-pagination-bullet {
      width: 8px;
      height: 8px;
      background: #ccc;
      opacity: 1;
      margin: 0 4px;
    }

    .features-grid__wrapper .swiper-pagination-bullet-active {
      background: #333;
    }
  }
</style>

<script>
  (function() {
    // Only initialize swiper on mobile
    if (window.innerWidth < 768) {
      const sectionId = '{{ section.id }}';
      const wrapper = document.querySelector(`[data-section-id="${sectionId}"] .features-grid__wrapper`);
      
      if (wrapper && typeof Swiper !== 'undefined') {
        // Add swiper classes
        wrapper.classList.add('swiper');
        
        // Wrap items in swiper-wrapper
        const items = Array.from(wrapper.children);
        const swiperWrapper = document.createElement('div');
        swiperWrapper.classList.add('swiper-wrapper');
        
        items.forEach(item => {
          const slide = document.createElement('div');
          slide.classList.add('swiper-slide');
          slide.appendChild(item.cloneNode(true));
          swiperWrapper.appendChild(slide);
        });
        
        // Clear and add swiper structure
        wrapper.innerHTML = '';
        wrapper.appendChild(swiperWrapper);
        
        // Add pagination
        const pagination = document.createElement('div');
        pagination.classList.add('swiper-pagination');
        wrapper.appendChild(pagination);
        
        // Initialize Swiper
        new Swiper(wrapper, {
          slidesPerView: 'auto',
          spaceBetween: 15,
          centeredSlides: false,
          pagination: {
            el: '.swiper-pagination',
            clickable: true,
          },
        });
      }
    }
  })();
</script>

