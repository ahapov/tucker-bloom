{% comment %} Content settings {% endcomment %}

{%- assign title = section.settings.title | escape -%}

{%- assign blocks = section.blocks -%}

{% comment %} End content settings {% endcomment %}

{{ 'logo-bar.css' | asset_url | stylesheet_tag }}
<script src="{{ 'logo-bar.js' | asset_url }}" defer></script>

<section
  class="logo-bar"
  data-section-id="{{ section.id }}"
>
  {% if title != blank %}
    <div class="logo-bar__header">
      <h2 class="logo-bar__heading">
        {{ title | escape }}
      </h2>
    </div>
  {% endif %}

  {% if blocks.size > 0 %}
    <div class="logo-bar__wrapper">
      {% for block in blocks %}
        {%- assign image = block.settings.image -%}
        <div class="logo-bar__item" data-block-id="{{ block.id }}">
          {% if block.settings.link != blank %}
            <a href="{{ block.settings.link }}" class="logo-bar__link">
          {% endif %}
            {% if image != blank %}
              {%
                render 'rimg',
                img: image,
                lazy: true,
                canvas: true,
                focal_point: image.presentation.focal_point,
              %}
            {% else %}
              {{ 'logo' | placeholder_svg_tag: 'placeholder-svg' }}
            {% endif %}
          {% if block.settings.link != blank %}
            </a>
          {% endif %}
          {% if block.settings.description != blank %}
            <div class="logo-bar__popup" data-popup-id="{{ block.id }}" aria-hidden="true">
              <div class="logo-bar__popup-backdrop"></div>
              <div class="logo-bar__popup-content">
                <button class="logo-bar__popup-close" aria-label="Close popup">
                  <span aria-hidden="true">&times;</span>
                </button>
                <div class="logo-bar__popup-text">
                  {{ block.settings.description }}
                </div>
              </div>
            </div>
          {% endif %}
        </div>
      {% endfor %}
    </div>
  {% endif %}
</section>

{% schema %}
{
  "name": "Logo list",
  "class": "shopify-section--logo-list",
  "max_blocks": 20,
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Heading",
      "default": "Logo list"
    }
  ],
  "blocks": [
    {
      "type": "logo_image",
      "name": "Logo",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link",
          "info": "Optional"
        },
        {
          "type": "textarea",
          "id": "description",
          "label": "Description",
          "default": "Enter description here..."
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Logo list",
      "category": "Image",
      "blocks": [
        {
          "type": "logo_image"
        },
        {
          "type": "logo_image"
        },
        {
          "type": "logo_image"
        },
        {
          "type": "logo_image"
        }
      ]
    }
  ]
}
{% endschema %}
