{% doc %}
  @prompt
    Create a product lifestyle image gallery section that displays images from the product metafield 'custom.lifestyle_image'. The section should have a clean, modern design that complements a product page layout. Include these features: responsive grid layout that works well on desktop (images should fit in the available space next to or below the main product images), mobile-friendly stacking, proper image aspect ratios, and settings to control image size and spacing. The section should only display when the metafield has images. Use a minimal, elegant design that matches modern e-commerce aesthetics with appropriate padding and margins to integrate seamlessly with existing product page sections.
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% liquid
  assign lifestyle_images = product.metafields.custom.lifestyle_image.value
  assign has_images = false
  
  if lifestyle_images != blank
    assign has_images = true
  endif
%}

{% if has_images %}
  {% style %}
    .ai-lifestyle-gallery-{{ ai_gen_id }} {
      width: 100%;
      padding: {{ block.settings.section_padding }}px 0;
    }

    .ai-lifestyle-gallery__container-{{ ai_gen_id }} {
      max-width: 100%;
    }

    .ai-lifestyle-gallery__heading-{{ ai_gen_id }} {
      font-size: {{ block.settings.heading_size }}px;
      color: {{ block.settings.heading_color }};
      margin: 0 0 {{ block.settings.spacing_below_heading }}px 0;
      text-align: {{ block.settings.heading_alignment }};
    }

    .ai-lifestyle-gallery__grid-{{ ai_gen_id }} {
      display: grid;
      grid-template-columns: repeat({{ block.settings.images_per_row }}, 1fr);
      gap: {{ block.settings.image_spacing }}px;
      margin: 0;
      padding: 0;
      list-style: none;
    }

    .ai-lifestyle-gallery__item-{{ ai_gen_id }} {
      position: relative;
      overflow: hidden;
      border-radius: {{ block.settings.image_border_radius }}px;
      background-color: #f4f4f4;
    }

    .ai-lifestyle-gallery__image-wrapper-{{ ai_gen_id }} {
      position: relative;
      width: 100%;
      padding-bottom: {{ block.settings.image_aspect_ratio }}%;
      overflow: hidden;
    }

    .ai-lifestyle-gallery__image-{{ ai_gen_id }} {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      object-fit: cover;
      transition: transform 0.3s ease;
    }

    {% if block.settings.enable_hover_zoom %}
      .ai-lifestyle-gallery__item-{{ ai_gen_id }}:hover .ai-lifestyle-gallery__image-{{ ai_gen_id }} {
        transform: scale(1.05);
      }
    {% endif %}

    @media screen and (max-width: 989px) {
      .ai-lifestyle-gallery__grid-{{ ai_gen_id }} {
        {% if block.settings.tablet_layout == '2' %}
          grid-template-columns: repeat(2, 1fr);
        {% else %}
          grid-template-columns: repeat(3, 1fr);
        {% endif %}
        gap: {{ block.settings.image_spacing | times: 0.75 }}px;
      }
    }

    @media screen and (max-width: 749px) {
      .ai-lifestyle-gallery-{{ ai_gen_id }} {
        padding: {{ block.settings.section_padding | times: 0.75 }}px 0;
      }

      .ai-lifestyle-gallery__grid-{{ ai_gen_id }} {
        {% if block.settings.mobile_layout == '1' %}
          grid-template-columns: 1fr;
        {% else %}
          grid-template-columns: repeat(2, 1fr);
        {% endif %}
        gap: {{ block.settings.image_spacing | times: 0.5 }}px;
      }

      .ai-lifestyle-gallery__heading-{{ ai_gen_id }} {
        font-size: {{ block.settings.heading_size | times: 0.85 }}px;
        margin-bottom: {{ block.settings.spacing_below_heading | times: 0.75 }}px;
      }
    }
  {% endstyle %}

  <div class="ai-lifestyle-gallery-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
    <div class="ai-lifestyle-gallery__container-{{ ai_gen_id }}">
      {% if block.settings.heading != blank %}
        <h2 class="ai-lifestyle-gallery__heading-{{ ai_gen_id }}">
          {{ block.settings.heading }}
        </h2>
      {% endif %}

      <ul class="ai-lifestyle-gallery__grid-{{ ai_gen_id }}">
        {% if lifestyle_images.first %}
          {% for image in lifestyle_images %}
            <li class="ai-lifestyle-gallery__item-{{ ai_gen_id }}">
              <div class="ai-lifestyle-gallery__image-wrapper-{{ ai_gen_id }}">
                <img
                  src="{{ image | image_url: width: 800 }}"
                  srcset="{{ image | image_url: width: 400 }} 400w,
                          {{ image | image_url: width: 600 }} 600w,
                          {{ image | image_url: width: 800 }} 800w,
                          {{ image | image_url: width: 1000 }} 1000w"
                  sizes="(min-width: 990px) calc((100vw - 120px) / {{ block.settings.images_per_row }}),
                         (min-width: 750px) calc((100vw - 80px) / 2),
                         calc(100vw - 40px)"
                  alt="{{ image.alt | escape }}"
                  class="ai-lifestyle-gallery__image-{{ ai_gen_id }}"
                  loading="lazy"
                  width="{{ image.width }}"
                  height="{{ image.height }}"
                >
              </div>
            </li>
          {% endfor %}
        {% else %}
          <li class="ai-lifestyle-gallery__item-{{ ai_gen_id }}">
            <div class="ai-lifestyle-gallery__image-wrapper-{{ ai_gen_id }}">
              <img
                src="{{ lifestyle_images | image_url: width: 800 }}"
                srcset="{{ lifestyle_images | image_url: width: 400 }} 400w,
                        {{ lifestyle_images | image_url: width: 600 }} 600w,
                        {{ lifestyle_images | image_url: width: 800 }} 800w,
                        {{ lifestyle_images | image_url: width: 1000 }} 1000w"
                sizes="(min-width: 990px) calc((100vw - 120px) / {{ block.settings.images_per_row }}),
                       (min-width: 750px) calc((100vw - 80px) / 2),
                       calc(100vw - 40px)"
                alt="{{ lifestyle_images.alt | escape }}"
                class="ai-lifestyle-gallery__image-{{ ai_gen_id }}"
                loading="lazy"
                width="{{ lifestyle_images.width }}"
                height="{{ lifestyle_images.height }}"
              >
            </div>
          </li>
        {% endif %}
      </ul>
    </div>
  </div>
{% endif %}

{% schema %}
{
  "name": "Lifestyle image gallery",
  "settings": [
    {
      "type": "header",
      "content": "Content"
    },
    {
      "type": "inline_richtext",
      "id": "heading",
      "label": "Heading",
      "default": "Lifestyle"
    },
    {
      "type": "select",
      "id": "heading_alignment",
      "label": "Heading alignment",
      "options": [
        {
          "value": "left",
          "label": "Left"
        },
        {
          "value": "center",
          "label": "Center"
        },
        {
          "value": "right",
          "label": "Right"
        }
      ],
      "default": "left"
    },
    {
      "type": "header",
      "content": "Layout"
    },
    {
      "type": "range",
      "id": "images_per_row",
      "min": 2,
      "max": 4,
      "step": 1,
      "label": "Images per row (desktop)",
      "default": 3
    },
    {
      "type": "select",
      "id": "tablet_layout",
      "label": "Columns on tablet",
      "options": [
        {
          "value": "2",
          "label": "2"
        },
        {
          "value": "3",
          "label": "3"
        }
      ],
      "default": "2"
    },
    {
      "type": "select",
      "id": "mobile_layout",
      "label": "Columns on mobile",
      "options": [
        {
          "value": "1",
          "label": "1"
        },
        {
          "value": "2",
          "label": "2"
        }
      ],
      "default": "1"
    },
    {
      "type": "range",
      "id": "image_spacing",
      "min": 0,
      "max": 40,
      "step": 4,
      "unit": "px",
      "label": "Image spacing",
      "default": 16
    },
    {
      "type": "select",
      "id": "image_aspect_ratio",
      "label": "Image aspect ratio",
      "options": [
        {
          "value": "75",
          "label": "Landscape (4:3)"
        },
        {
          "value": "100",
          "label": "Square (1:1)"
        },
        {
          "value": "125",
          "label": "Portrait (4:5)"
        },
        {
          "value": "133",
          "label": "Portrait (3:4)"
        }
      ],
      "default": "100"
    },
    {
      "type": "header",
      "content": "Style"
    },
    {
      "type": "range",
      "id": "heading_size",
      "min": 16,
      "max": 48,
      "step": 2,
      "unit": "px",
      "label": "Heading size",
      "default": 24
    },
    {
      "type": "color",
      "id": "heading_color",
      "label": "Heading color",
      "default": "#2a2a2a"
    },
    {
      "type": "range",
      "id": "spacing_below_heading",
      "min": 8,
      "max": 48,
      "step": 4,
      "unit": "px",
      "label": "Spacing below heading",
      "default": 24
    },
    {
      "type": "range",
      "id": "section_padding",
      "min": 0,
      "max": 80,
      "step": 4,
      "unit": "px",
      "label": "Section padding",
      "default": 32
    },
    {
      "type": "range",
      "id": "image_border_radius",
      "min": 0,
      "max": 20,
      "step": 2,
      "unit": "px",
      "label": "Image border radius",
      "default": 0
    },
    {
      "type": "checkbox",
      "id": "enable_hover_zoom",
      "label": "Enable hover zoom effect",
      "default": true
    }
  ],
  "presets": [
    {
      "name": "Lifestyle image gallery"
    }
  ]
}
{% endschema %}